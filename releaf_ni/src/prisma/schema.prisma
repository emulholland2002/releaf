generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  name      String?
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  donations Donation[]
}

model Donation {
  id        String   @id @default(cuid())
  userId    String?
  user      User?    @relation(fields: [userId], references: [id])
  name      String
  email     String
  amount    Float
  message   String?
  status    String   @default("pending") // pending, completed, failed
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model UserEvent {
  userId   String
  eventId  String
  addedAt  DateTime @default(now())

  user     User   @relation(fields: [userId], references: [id])
  event    Event  @relation(fields: [eventId], references: [id]) 

  @@id([userId, eventId]) // composite key
}

model Event {
  id        String       @id @default(cuid())
  title     String
  date      DateTime
  attendees UserEvent[]
}
